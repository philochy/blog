---
import '@fontsource-variable/inter';
---

<style is:inline>
  html {
    font-size: calc(16px + (20 - 16) * ((100vw - 750px) / (1920 - 750)));
  }
  :root {
    /* base */
    --primary-blue: #2058c0;
    --primary-dark-blue: #0c47b3;
    --secondary-blue: #0073e6;
    --text-white: #ffffff;
    --text-dark: #333333;
    --gray-light: #f7f7f7;
    --gray-dark: #666666;
    --icon-gray: #cccccc;

    --font-sans: 'Inter Variable';
    --font-serif: 'Inter Variable';
    --font-heading: 'Inter Variable';

    --font-size-base: 1rem;
    --font-size-heading: 1.125rem;
    --font-size-small: 0.875rem;
    --font-size-large: 1.25rem;
    --font-weight-normal: 400;
    --font-weight-medium: 500;
    --font-weight-semibold: 600;
    --font-weight-bold: 700;
    --line-height-base: 1.375rem;
    --line-height-heading: 2.25rem;
    --line-height-heading-sm: 3rem;

    --gap-size-small: 0.625rem;
    --gap-size-large: 1.25rem;

    --spacing-small: 0.5rem;
    --spacing-medium: 1rem;
    --spacing-large: 1.625rem;

    --padding-small: 0.5rem;
    --padding-medium: 1rem;

    --border-radius: 4px;
    --transition-speed: 0.3s;

    --line-height-adjustment: 0.375rem;

    /* ui */
    --font-size-banner-title: 3.125rem;
    --line-height-banner-title: calc(
      var(--font-size-banner-title) + var(--line-height-adjustment)
    );

    --font-size-banner-desc: 1.25rem;
    --line-height-banner-desc: calc(
      var(--font-size-banner-desc) + var(--line-height-adjustment)
    );

    --font-size-card-title: 1.375rem;
    --line-height-card-title: calc(
      var(--font-size-card-title) + var(--line-height-adjustment)
    );

    --font-size-card-desc: 1rem;
    --line-height-card-desc: calc(
      var(--font-size-card-desc) + var(--line-height-adjustment)
    );

    --font-size-card-tag: 0.875rem;
    --line-height-card-tag: calc(
      var(--font-size-card-tag) + var(--line-height-adjustment)
    );

    --padding-x-card-tag: 0.8125rem;
    --padding-y-card-tag: 0.4375rem;

    --font-size-breadcrumb: 0.875rem;
    --line-height-breadcrumb: calc(
      var(--font-size-breadcrumb) + var(--line-height-adjustment)
    );

    --font-size-tab: 1.25rem;
    --line-height-tab: calc(
      var(--font-size-tab) + var(--line-height-adjustment)
    );

    --font-size-banner-btn: 1.125rem;
    --line-height-banner-btn: calc(
      var(--font-size-banner-btn) + var(--line-height-adjustment)
    );

    --padding-y-banner-btn: 1.375rem;
    --padding-x-banner-btn: 4.1875rem;

    --padding-y-tab: 1.5625rem;
    --padding-x-tab: 3.875rem;
  }

  @media (max-width: 750px) {
    :root {
      /* base */
      --gap-size-large: 13px;

      /* ui */
      --font-size-banner-title: 1.875rem;

      --font-size-banner-desc: 1.375rem;

      --font-size-card-title: 1.625rem;

      --font-size-card-desc: 1.375rem;

      --font-size-card-tag: 1.25rem;
      --padding-x-card-tag: 1.25rem;
      --padding-y-card-tag: 0.625rem;

      --font-size-card-person-name: 1.375rem;

      --font-size-card-time: 1.125rem;

      --font-size-tab: 1.375rem;
      --padding-y-tab: 1.9375rem;
      --padding-x-tab: 6.125rem;
      --font-size-banner-btn: 1.375rem;
      --line-height-banner-btn: calc(
        var(--font-size-banner-btn) + var(--line-height-adjustment)
      );
      --padding-y-banner-btn: 0;
      --padding-y-banner-btn: 1.9375rem;
    }
  }
</style>
