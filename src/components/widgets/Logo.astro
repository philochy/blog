---
import type { ImageMetadata } from 'astro';

import { twMerge } from 'tailwind-merge';

import Image from '../base/Image.astro';
import Link from '../base/Link.astro';
interface Props {
  image: string | ImageMetadata;
  className?: string;
}
const { image, className } = Astro.props;
---

<Link href="/" class={twMerge('inline-block', className)}>
  <Image
    alt="logo"
    src={image}
    class={twMerge(
      'h-[auto] !max-h-full w-[13.375rem] !max-w-none object-cover md:!w-[9.75rem]',
      className
    )}
  />
</Link>
