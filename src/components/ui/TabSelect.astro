---
import { twMerge } from 'tailwind-merge';

import Tabs from './Tabs.astro';

import type { ComponentProps } from 'astro/types';

import { TABS_MAX_LENGTH } from '@/config/config';
type Props = ComponentProps<typeof Tabs>;

const { tabs, activeKey, className = '' } = Astro.props;
---

<select
  id="tab-select"
  class={twMerge(
    'tab-select border-[0.0625rem] text-center uppercase border-primary-dark-blue text-primary-dark-blue focus:ring-[0.0625rem] text-[1.375rem] md:h-fit h-[5rem] md:w-[22.4375rem] md:py-[1.4375rem] md:text-[1.25rem]',
    className
  )}
>
  {
    tabs.slice(0, TABS_MAX_LENGTH).map((item) => (
      <option
        value={item.link}
        selected={activeKey === item.link}
        class="uppercase"
      >
        {item.label}
      </option>
    ))
  }
</select>
